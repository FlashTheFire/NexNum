{
  "name": "nexnum-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "cross-env HOST=0.0.0.0 next dev --turbo",
    "dev:full": "npx concurrently -n dev,socket -c blue,magenta \"npm run dev\" \"npm run services:socket\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "analyze": "set ANALYZE=true && next build",
    "infra:up": "docker compose up -d redis meilisearch",
    "infra:monitoring": "docker compose --profile monitoring up -d",
    "infra:down": "docker compose down",
    "dev:all": "npm run infra:monitoring && npm run dev",
    "services:worker": "npx tsx -r dotenv/config src/worker-entry.ts",
    "services:socket": "npx tsx -r dotenv/config src/socket-entry.ts",
    "services:queue": "npx tsx -r dotenv/config src/scripts/verify-queue.ts",
    "services:sync-trigger": "npx tsx -r dotenv/config src/scripts/trigger-sync.ts",
    "bootstrap": "npx tsx src/scripts/bootstrap.ts",
    "deploy:aws": "bash infra/deploy-aws.sh",
    "data:archive": "bash infra/archive-data.sh",
    "data:restore": "bash infra/restore-data.sh"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@hcaptcha/react-hcaptcha": "^2.0.2",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "7.3.0",
    "@prisma/client": "7.3.0",
    "@radix-ui/react-accordion": "1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "2.1.8",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-switch": "1.2.6",
    "@react-email/components": "^1.0.3",
    "@react-email/render": "^2.0.1",
    "@sentry/nextjs": "^10.32.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/js-cookie": "^3.0.6",
    "@types/nodemailer": "^7.0.5",
    "bcryptjs": "3.0.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "dotenv": "^17.2.3",
    "framer-motion": "11.18.2",
    "ioredis": "^5.9.1",
    "jose": "6.1.3",
    "js-cookie": "^3.0.5",
    "libphonenumber-js": "^1.12.35",
    "lucide-react": "^0.562.0",
    "meilisearch": "0.54.0",
    "next": "15.1.6",
    "next-intl": "^4.7.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.12",
    "opossum": "^9.0.0",
    "otplib": "^13.1.1",
    "pg": "8.16.3",
    "pg-boss": "^12.5.4",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "prisma": "7.3.0",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.71.1",
    "recharts": "^3.6.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "sonner": "1.7.4",
    "swagger-ui-react": "^5.31.0",
    "swr": "2.3.8",
    "tailwind-merge": "2.6.0",
    "tailwindcss-animate": "1.0.7",
    "telegraf": "^4.16.3",
    "tsx": "4.19.2",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7",
    "zod": "4.2.1",
    "zustand": "4.5.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.1",
    "@playwright/test": "^1.57.0",
    "@types/bcryptjs": "2.4.6",
    "@types/node": "20.19.27",
    "@types/opossum": "^8.1.9",
    "@types/pg": "8.16.0",
    "@types/qrcode": "^1.5.6",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/uuid": "^10.0.0",
    "@types/web-push": "^3.6.4",
    "autoprefixer": "10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
